@model IEnumerable<RecetarioMVC1.Models.receta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="marginTop">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fuente_receta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ubicacion_fisica_receta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lista_ingredientes_receta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.utensilios_receta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comentario_receta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tiempo_receta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fuente_receta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ubicacion_fisica_receta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lista_ingredientes_receta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.utensilios_receta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentario_receta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tiempo_receta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.cod_receta }, new { @class = "fa-solid fa-pen-to-square btn btn-warning" })
            @Html.ActionLink(" ", "Details", new { id = item.cod_receta }, new { @class = "fa-solid fa-eye btn btn-success" })
            @Html.ActionLink(" ", "Delete", new { id = item.cod_receta }, new { @class = "fa-solid fa-trash btn btn-danger" })
        </td>
    </tr>
}

</table>
