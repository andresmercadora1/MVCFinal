            @Html.DisplayFor(modelItem => item.porcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.receta.fuente_receta)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.cod_plato }, new { @class = "fa-solid fa-pen-to-square btn btn-warning" })
            @Html.ActionLink(" ", "Details", new { id = item.cod_plato }, new { @class = "fa-solid fa-eye btn btn-success" })
