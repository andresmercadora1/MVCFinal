@model IEnumerable<RecetarioMVC1.Models.menu>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="marginTop">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre_menu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio_menu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comentario_menu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.receta.fuente_receta)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_menu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio_menu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentario_menu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.receta.fuente_receta)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.cod_menu }, new { @class = "fa-solid fa-pen-to-square btn btn-warning" })
            @Html.ActionLink(" ", "Details", new { id = item.cod_menu }, new { @class = "fa-solid fa-eye btn btn-success" })
            @Html.ActionLink(" ", "Delete", new { id = item.cod_menu }, new { @class = "fa-solid fa-trash btn btn-danger" })
        </td>
    </tr>
}

</table>
